<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="30 seconds">
    <springProperty scope="context" name="logLevel" source="logging.level.root"/>
    <springProperty scope="context" name="logPath" source="logging.file.path"/>
    <springProperty scope="context" name="name" source="spring.application.name"/>
    <turboFilter class="nbcp.filter.MyLogBackFilter"></turboFilter>

    <property name="pattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %X{group} %X{request_id} [%class:%line]:%n%m%n" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <appender name="FILE-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath:-logs}/${name:-log}.log</file>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath:-logs}/${name:-log}.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <!-- 30 days -->
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>16MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <filter class="nbcp.filter.MyGroupLogBackFilter"></filter>
    </appender>

    <appender name="FILE-TASK-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath:-logs}/${name:-log}-task.txt</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %level %X{group} %X{request_id} [%class:%line]:%n%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath:-logs}/${name:-log}-task.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <!-- 30 days -->
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>16MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <filter class="nbcp.filter.MyGroupLogBackFilter">
            <group>task</group>
        </filter>
    </appender>

    <appender name="FILE-MAIN-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath:-logs}/${name:-log}-main.txt</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %level %X{group} %X{request_id} [%class:%line]:%n%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath:-logs}/${name:-log}-main.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>16MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <filter class="nbcp.filter.MyGroupLogBackFilter">
            <group>main</group>
        </filter>
    </appender>

    <appender name="ERROR-FILE-OUT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath:-logs}/${name:-log}-error.txt</file>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] %level %X{group} %X{request_id} [%class:%line]:%n%m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logPath:-logs}/${name:-log}-error.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <!-- 30 days -->
            <maxHistory>30</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>16MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <root level="${logLevel}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE-OUT" />
        <appender-ref ref="FILE-TASK-OUT" />
        <appender-ref ref="FILE-MAIN-OUT" />
        <appender-ref ref="ERROR-FILE-OUT" />
    </root>
</configuration>